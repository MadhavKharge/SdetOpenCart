<?xml version="1.0" encoding="UTF-8"?>

<Configuration status="WARN">

<properties>
      <property name="basepath">./logs</property> <!-- where to save logs ./means current project directory -->
</properties>



  <Appenders>
   
    <Console name="Console" target="SYSTEM_OUT">
      <PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"/>
    </Console>
 <!-- %i -->
    <RollingFile name="File" filename="${basepath}/automation.log" filePattern="${basepath}/automation-%d{yyyy-MM-dd}-%i.log">
    <patternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"/>
   
   <Policies>
     <SizeBasedTriggeringPolicy size="5MB"/>
   </Policies>
    
    </RollingFile>
  </Appenders>
  
  <Loggers>
   <!-- level="Debug" --> 
   <!-- level="Off" --> 
    <Root level="Info"><!-- Here we can use multiple log levels ALL < Trace < Debug < Info < Warn < Error < Fatal < Off-->
       <!-- <AppenderRef ref="Console"/> -->
      <AppenderRef ref="File"/>
    </Root>
    
  </Loggers>
</Configuration>